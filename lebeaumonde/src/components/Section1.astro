---
import logo from "/logo.svg";
import wirePhone from "/wireframe-phone.png";
---

<div class="relative overflow-hidden bg-green-sapin" style="height: 765px">
  <div class="mx-auto max-w-7xl">
    <div class="relative px-4 pt-10 sm:px-6 lg:px-8">
      <nav
        class="relative flex items-center justify-between sm:h-10 w-full"
        aria-label="Global"
      >
        <div class="flex flex-shrink-0 flex-grow items-center lg:flex-grow-0">
          <div class="flex w-full items-center justify-between md:w-auto">
            <a href="#">
              <span class="sr-only">Your Company</span>
              <img alt="Your Company" class="h-24 w-24" src={logo} />
            </a>
            <div class="-mr-2 flex items-center md:hidden">
              <button
                type="button"
                class="inline-flex items-center justify-center rounded-md bg-white p-2 text-gray-400 hover:bg-gray-100 hover:text-beige-nounours focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500"
                aria-expanded="false"
              >
                <span class="sr-only">Open main menu</span>
                <!-- Heroicon name: outline/bars-3 -->
                <svg
                  class="h-6 w-6"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  aria-hidden="true"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
                </svg>
              </button>
            </div>
          </div>
        </div>
        <div class="hidden md:ml-10 md:block md:space-x-8 md:pr-4">
          <a
            href="#"
            class="font-medium text-beige-nounours hover:text-gray-900"
            >Connexion</a
          >

          <button
            type="button"
            class="inline-flex items-center rounded-md border border-transparent bg-beige-nounours px-6 py-3 text-base font-medium text-green-sapin shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
            >S'identifier</button
          >
        </div>
      </nav>
    </div>
    <svg
      class="absolute"
      style="left: 500px; top: 115px"
      width="1084"
      height="778"
      viewBox="0 0 1084 778"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
